<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="03" author="carina" runOnChange="true">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="work_hour"/>
            </not>
        </preConditions>
        <createTable tableName="work_hour" remarks="A table to contain all the work hours of the employees">
            <column name="id" type="int8" autoIncrement="true">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="employee_id" type="int8">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="work_date" type="DATE">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="work_time" type="TIME">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="period_type" type="varchar(20)">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="adjusted_time" type="bool">
                <constraints nullable="false" unique="false"/>
            </column>
            <column name="justification_adjustment" type="varchar(255)">
                <constraints nullable="true" unique="false"/>
            </column>
            <column name="updated_date" type="TIMESTAMP">
                <constraints nullable="true" unique="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>